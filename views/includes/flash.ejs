<%if(msg && msg.length){%>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" style="text-align:center;" role="alert" >
        <i class="bi bi-check-circle-fill me-2"></i> <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
       </div>
<%}%>

<%if(err && err.length){%>
    <div  class="alert alert-danger alert-dismissible fade show col-6 offset-3" style="text-align:center;" role="alert" >
        <i class="bi bi-x-circle-fill me-2"></i> <%= err %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
       </div>
<%}%>


